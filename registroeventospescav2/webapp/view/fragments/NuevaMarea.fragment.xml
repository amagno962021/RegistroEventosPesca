<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" 
   xmlns:form="sap.ui.layout.form" >
   <Dialog
      title="Nueva Marea">
        <content>
            <form:Form width="100%" editable="true" visible="true">
                <form:formContainers>
                    <form:FormContainer visible="true">
                        <form:formElements>
                            <form:FormElement visible="true">
                                <form:label>
                                    <Label text="Planta" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:label>
                                <form:fields>
                                    <ComboBox id="cbxPlantas" editable="true" enabled="true" visible="true" width="auto" valueState="None" maxWidth="100%" items="{path: 'Plantas>/data'}">
                                        <items>
                                            <core:Item text="{Plantas>DESCR}" enabled="true" key="{Plantas>CDPTA}"/>
                                        </items>
                                    </ComboBox>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
                                    <Label text="EmbarcaciÃ³n" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                </form:label>
                                <form:fields>
                                    <Input type="Text" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0"/>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                        <form:title/>
                    </form:FormContainer>
                </form:formContainers>
                <form:layout>
                    <form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
                </form:layout>
            </form:Form>
        </content>
      <beginButton>
        <Button type="Emphasized" text="Aceptar" press="onCrearMarea"></Button>
      </beginButton>
      <endButton>
        <Button text="Cancelar" press="onCancelMarea"></Button>
      </endButton>
   </Dialog>
</core:FragmentDefinition>