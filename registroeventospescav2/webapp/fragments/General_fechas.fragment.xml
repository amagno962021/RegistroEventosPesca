<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">

	<Panel id="0001" headerText="Fechas" expandable="true" expanded="true">
		<content>
			<form:Form width="100%" editable="true" visible="true">
				<form:formContainers>

					<form:FormContainer visible="true">
						<form:formElements>
							<form:FormElement id="fe_fechaIniCala" visible="true">
								<form:label>
									<Label text="Fecha/Hora Inic. Cala" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true" />
								</form:label>
								<form:fields>
									<DateTimePicker value="{eventos>/FICAL} {eventos>/HICAL}" id="dtp_fechaIniCala" width="50%" displayFormat="dd/MM/yyyy HH:mm:ss" required="false" valueStateText="Invalid entry" enabled="true" visible="true" valueFormat="dd/MM/yyyy HH:mm:ss"  />
								</form:fields>
							</form:FormElement>
							<form:FormElement id ="FechaEnvaseIni" visible="{visible>/VisibleDescarga}">
								<form:label>
									<Label id="labelTextFechIniEnv" text="Fech/hora Inic. envase" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true" />
								</form:label>
								<form:fields>
									<DateTimePicker value="{eventos>/FIEVN} {eventos>/HIEVN}" id="dtf_fechaIniEnv" width="50%" displayFormat="dd/MM/yyyy HH:mm:ss" required="false" valueStateText="Invalid entry" enabled="true" visible="true" valueFormat="dd/MM/yyyy HH:mm:ss" />
								</form:fields>
							</form:FormElement>
							<form:FormElement id ="fe_FechaProduccion" visible="true">
								<form:label>
									<Label text="Fecha de producciÃ³n" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true" />
								</form:label>
								<form:fields>
									<DateTimePicker value="{eventos>/FechProduccion}" id="dtf_FechaProduccion" width="50%" displayFormat="dd/MM/yyyy" required="false" valueStateText="Invalid entry" enabled="true" visible="true" valueFormat="yyyyMMdd" />
								</form:fields>
							</form:FormElement>
							<form:FormElement id="fe_fechaArribo" visible="true">
								<form:label>
									<Label text="Fecha/hora ETA" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true" />
								</form:label>
								<form:fields>
									<DateTimePicker value="{DetalleMarea>/DatosGenerales/FEARR} {DetalleMarea>/DatosGenerales/HEARR}" width="50%" displayFormat="dd/MM/yyyy HH:mm:ss" required="false" valueStateText="Invalid entry" enabled="true" visible="true" valueFormat="yyyyMMddHHmmss" />
								</form:fields>
							</form:FormElement>
						</form:formElements>
					</form:FormContainer>
					<form:FormContainer visible="true">
						<form:formElements>
							<form:FormElement id="fe_fechaFinCala" visible="true">
								<form:label>
									<Label text="Fech/hora fin Cala" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true" />
								</form:label>
								<form:fields>
									<DateTimePicker value="{eventos>/FFCAL} {eventos>/HFCAL}" id="dtp_fechaFinCala" width="50%" displayFormat="dd/MM/yyyy HH:mm:ss" required="false" valueStateText="Invalid entry" enabled="true" visible="true" valueFormat="dd/MM/yyyy HH:mm:ss" />
								</form:fields>
							</form:FormElement>
							<form:FormElement id ="FechaEnvaseFin" visible="{visible>/FechFin}">
								<form:label>
									<Label text="Fech/hora fin envase" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true" />
								</form:label>
								<form:fields>
									<DateTimePicker value="{eventos>/FFEVN} {eventos>/HFEVN}" id="dtf_fechaFinEnv" width="50%" displayFormat="dd/MM/yyyy HH:mm:ss" required="false" valueStateText="Invalid entry" enabled="true" visible="true" valueFormat="yyyyMMddHHmmss" />
								</form:fields>
							</form:FormElement>
						</form:formElements>
					</form:FormContainer>
				</form:formContainers>
				<form:layout>
					<form:ResponsiveGridLayout singleContainerFullSize="false" adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="2" labelSpanM="2" labelSpanS="8" />
				</form:layout>
			</form:Form>
		</content>
	</Panel>

</core:FragmentDefinition>